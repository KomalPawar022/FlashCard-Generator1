jest.mock("whatwg-encoding", () => ({
  TextEncoder: () => ({
    encode: (str) => new TextEncoder().encode(str), // Simulate encoding
  }),
}));
import { jest } from "@jest/globals";
import { render } from "@testing-library/react";
import PDFComponent from "./index";
import { expect } from "@jest/globals";
import { it } from "@jest/globals";
import { Provider } from "react-redux";
import store from "../../store";
import { BrowserRouter } from "react-router-dom";

function renderWithRedux(ui, store1 = store) {
  return render(
    <BrowserRouter>
      <Provider store={store1}>{ui}</Provider>
    </BrowserRouter>,
  );
}

it("should match the snapshot", () => {
  const { asFragment } = renderWithRedux(
    <PDFComponent
      groupName={"Group1"}
      groupDesc={"Description of Group1"}
      groupImg={"https://picsum.photos/200/300"}
      card={[]}
    />,
  );
  expect(asFragment()).toMatchSnapshot();
});
